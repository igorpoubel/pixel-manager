{
  "compilerOptions": {
    "lib": ["es2017"],
    "types": ["bluebird-global", "node", "koa"],
    "typeRoots": ["node_modules/@types"],
    "target": "es2017",
    "moduleResolution": "node",
    "module": "es6",
    "sourceMap": false,
    "allowJs": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitThis": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "include": ["typings.d.ts", "./**/*"],
  "exclude": ["node_modules"]
}
